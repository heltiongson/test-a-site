@import "../public/css/vendor/bootstrap.css"
@import "../public/css/vendor/bootstrap-responsive.css"
@import "nib"

$fontColor = #333
$border    = #ccc
$light     = #e5e5e5
$lighter   = #f5f5f5

body
  padding 2rem
  background-color $lighter

#zvelonet
  max-width 1170px
  margin-right auto
  margin-left auto
  // border 1px solid $light
  background-color #fff
  padding 2rem
  border-radius 5px

  form
    margin 0

  .categories,
  .controls
    margin-top 1rem

  .controls
    text-align center
    // border-top 1px solid $border
    padding-top 1rem

    .btn
      overflow ellipsis

  .category
    white-space nowrap
    // TODO(jrubin) scale this as necessary
    // TODO(jrubin) change font
    // TODO(jrubin) make look like a flag
    max-width 100%

  .btn
    margin-top 0.5rem

  .left
    float left

  .right
    float right

  .url
    overflow ellipsis

  label, input, .url
    font-size 2rem
    line-height 2.5rem

  .lookup-row
    display table
    width 100%

    // *
    //   background-color #f8f8f8

    & > *
      display table-cell
      margin-bottom 0
      padding 0.25rem 0

    label
      color $fontColor
      width 1px
      cursor default

    input
      width 100%
      // border-bottom 1px solid $border
      // border-right 1px solid $border
      border-radius 0
      color $fontColor

  input
    margin-bottom 1rem
    border 0
    // border-bottom 1px solid $border
    padding-left 0
    padding-right 0
    box-shadow none
    height auto

  ul li:first-child
    padding-left 0

  .clearfix
    clearfix()

  select
    background transparent
    padding 0.5rem
    appearance none
    border-radius 0
    // border 0
    height auto
    width auto
    font-size 1.2rem

  .img
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-size 100% auto
    background-position top right
    background-repeat no-repeat

  /*
  .fill
    position relative
    width 100%
    height 100%
  */

  .reputation
    position relative
    display inline-block

    .aspect
      $aspect-ratio = 483 / 475
      padding-top (100% / $aspect-ratio)

    p
      // position absolute
      width 85%
      // top 100%
      // left 0
      text-align center
      background-color white
      border 1px solid black
      overflow ellipsis
      padding 0.25rem
      margin-top 0.25rem

    .reputation700
      background-image url("../img/zvelo-no-known-risk-a.png")

    .reputation701
      background-image url("../img/zvelo-possible-risk-a.png")

    .reputation702
      background-image url("../img/zvelo-medium-risk-a.png")

    .reputation703
      background-image url("../img/zvelo-high-risk-a.png")

.modal.authorizing
  .modal-body
    height 11rem
    text-align center

    img
      margin-bottom 1rem
