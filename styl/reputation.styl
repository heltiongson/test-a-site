&
  position relative
  max-width 10rem
  margin-left auto

.img
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background-size 100% auto
  background-position top right
  background-repeat no-repeat

.aspect
  $aspect-ratio = 483 / 475
  padding-top (100% / $aspect-ratio)

p
  width 85%
  text-align center
  border 1px solid $medium
  background $light
  border-radius 6px
  overflow ellipsis
  padding 0.5rem
  margin 0
  margin-top 0.5rem
  font-weight 200

